{
  "name": "sui-patreon",
  "version": "1.0.0",
  "private": true,
  "description": "Decentralized creator platform on Sui",
  "workspaces": [
    "backend",
    "web",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:web\"",
    "dev:backend": "bun --filter backend dev",
    "dev:web": "bun --filter web dev",
    "dev:indexer": "bun --filter backend indexer",
    "build": "bun run build:backend && bun run build:web",
    "build:backend": "bun --filter backend build",
    "build:web": "bun --filter web build",
    "contracts:build": "cd contracts && sui move build",
    "contracts:test": "cd contracts && sui move test",
    "contracts:publish": "cd contracts && sui client publish --gas-budget 100000000",
    "db:migrate": "bun --filter backend prisma:migrate",
    "db:studio": "bun --filter backend prisma:studio",
    "db:generate": "bun --filter backend prisma:generate",
    "lint": "bun --filter web lint && bun --filter backend lint",
    "clean": "bun --filter backend clean && bun --filter web clean",
    "setup": "bun install && bun run db:generate"
  },
  "dependencies": {
    "@mysten/sui.js": "0.54.1",
    "axios": "1.13.2"
  },
  "devDependencies": {
    "@types/node": "24.10.1",
    "concurrently": "^8.2.2",
    "@types/bun": "latest",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  }
}